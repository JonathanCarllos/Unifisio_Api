@{
    ViewData["Title"] = "Bem-vindo ao UNIFISIO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Bem-vindo ao <strong>UNIFISIO</strong></h1>
        <p class="lead">Sistema de Gestão para Clínicas de Fisioterapia</p>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">📋 Gestão de Pacientes</h5>
                    <p class="card-text">Cadastre, acompanhe e gerencie os tratamentos de seus pacientes com facilidade.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🩺 Planos de Tratamento</h5>
                    <p class="card-text">Crie e organize sessões de fisioterapia com controle de frequência e evolução.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">📊 Relatórios e Indicadores</h5>
                    <p class="card-text">Acompanhe o desempenho da clínica por meio de gráficos e relatórios completos.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a class="btn btn-primary btn-lg" href="/Account/Login">Acessar o Sistema</a>
    </div>
</div>
